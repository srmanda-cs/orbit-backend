# This file shows required environment variables
# Copy this to .env.development and .env.production and fill in actual values

# Database Configuration
DATABASE_URL=postgresql://user:password@host:port/dbname

# Environment (development/production)
ENVIRONMENT=development

# Secret key for JWT/Sessions (generate using: python -c "import secrets; print(secrets.token_urlsafe(32))")
SECRET_KEY=your-secret-key-here

# Debug mode
DEBUG=True

# API Configuration
API_VERSION=v1
API_PREFIX=/api

# CORS Origins (comma separated)
CORS_ORIGINS=http://localhost:3000,http://localhost:8080

# Future: External Service Keys
# GOOGLE_CLIENT_ID=
# GOOGLE_CLIENT_SECRET=
# OPENAI_API_KEY=
# STRIPE_API_KEY=
# SENDGRID_API_KEY=

# Railway specific (optional)
# RAILWAY_ENVIRONMENT=
# PORT=8000